table {
	width: 100%;
	border-collapse: collapse;
	border: none;
	border-spacing: 0;
	white-space: nowrap;

	td {
		text-align: right;
		padding: 12px 8px;

		&.left-align {
			text-align: left;
		}

		&.right-align {
			text-align: right;
		}

		&.fit-text {
			width: 1px;
			white-space: nowrap;
		}
	}

	thead {
		td {
			position: sticky;
			top: 0;
			height: 38px;
			color: rgba(0, 0, 0, 0.28);
			font-size: 0.8rem;
			background: #ffffff;
		}
	}

	tbody {
		tr {
			&:nth-child(even) {
				background: #191919;
			}

			&.total-row td {
				position: sticky;
				top: 38px;
				background: bg-dark;
				color: primary;

				/** border-top and border-bottom do not seem to follow sticky when scrolling */
				&:after {
					content: '';
					position: absolute;
					top: 0;
					left: 0;
					right: 0;
					height: 1px;
					background: dark-gray;
				}

				&:before {
					content: '';
					position: absolute;
					bottom: 0;
					left: 0;
					right: 0;
					height: 1px;
					background: dark-gray;
				}
			}
		}
	}
}

body.dark {
	thead td {
		color: rgba(255, 255, 255, 0.54);
		background: #191919;
	}

	tbody tr:nth-child(even) {
		background: #191919;
	}
}